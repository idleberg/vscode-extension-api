    "scripts": {
        "compile": "npm run build",
        "build": "rollup --config",
        "dev": "npm run start",
        "fix": "eslint --fix ./src",
        "lint:json": "jsonlint --quiet ./*.json",
        "lint:ts": "eslint ./src",
        "lint": "npm-run-all  --parallel lint:*",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "start": "rollup --watch --config",
        "test": "npm run lint",
        "vscode:prepublish": "npm run build"
